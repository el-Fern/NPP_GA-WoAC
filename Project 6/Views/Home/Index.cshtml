@model Project_5.ViewModels.HomeIndexViewModel

@*for each problem, make a section to display everything*@
@for (int i = 0; i < Model.Problems.Count; i++)
{
    <h2><strong>@Model.Problems[i].FileName</strong></h2>
    <h3><strong>Total Difference: @Model.Problems[i].TotalDifference</strong></h3>
    <h5>Milliseconds taken to complete: @Math.Round(Model.Problems[i].MillisecondsToRun, 2)</h5>
    <h3>Partition 1 (Total Value: @Model.Problems[i].Partitions.Partition1.Sum()) :</h3>
    <div class="partition">
        <span>
            @string.Join(", ", Model.Problems[i].Partitions.Partition1)
        </span>
    </div>
    <h3>Partition 2 (Total Value: @Model.Problems[i].Partitions.Partition2.Sum()) :</h3>
    <div class="partition">
        <span>
            @string.Join(", ", Model.Problems[i].Partitions.Partition2)
        </span>
    </div>
    if ((i + 1) % 10 == 0)
    {
        <hr>
        <hr>
    }
}

<style>
    hr {
        /*line break in between partition sets for each file*/
        border-top: 2px solid black;
    }

    .partition {
        /*add a border around the partitions*/
        border: 1px solid;
    }
</style>